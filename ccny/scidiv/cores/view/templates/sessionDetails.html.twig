<div id="session_info_fields">
    {% if record_id is defined %}
    <input type="hidden" value="{{record_id}}" name="s_rec_id" id="s_rec_id">
    {% endif %}
    {% if username is defined %}
    <div class="dialog_item">User Name:&nbsp;<a id="e_user_name" data-value="{{user_id|e}}" class="field_value">{{username|e}}</a></div>
    {% endif %}
    {% if email is defined %}
    <div class="dialog_item">User E-mail:&nbsp;<span id="e_user_email" class="field_value">{{email|e}}</span></div>
    {% endif %}
    {% if pi is defined %}
    <div class="dialog_item">Mentor:&nbsp;<span id="e_piname" class="field_value">{{pi|e}}</span></div>
    {% endif %}
    {% if start is defined %}
    <div class="dialog_item">Session Start:&nbsp;<span id="e_start" class="field_value">{{start|e}}</span></div>
    {% endif %}
    {% if end is defined %}
    <div class="dialog_item">Session End:&nbsp;<span id="e_end" class="field_value">{{end|e}}</span></div>
    {% endif %}
    {% if type is defined %}
    <div class="dialog_item">Service Type:&nbsp;<span id="e_type" class="field_value">{{type|e}}</span></div>
    {% endif %}
    {% if note is defined %}    
    <div class="dialog_item">Notes:&nbsp;<span id="e_note">{{note|e}}</span></div>
    {% endif %}
</div>
<!-- If editing is enabled -->
{% if can_cancel or can_edit_user or can_edit_note %}
<hr>
<div class="session_info_cntrl_pannel" id="s_info_cntr_panel">
    {% if can_edit_note %}
    <div class="corecal_btn corecal_btn_sm"><img src="images/notes.png" title="Edit Note" alt="Edit Note" id="edit_note_btn"/></div>
    {% endif %}
    {% if can_edit_user %}
    <div class="corecal_btn corecal_btn_sm"><img src="images/user.png" title="Change User" alt="Change User" id="edit_user_btn"/></div>
    {% endif %}
    {% if can_cancel %}
    <div class="corecal_btn corecal_btn_sm"><img src="images/cancel.png" title="Cancel" alt="Cancel" id="cancel_btn"/></div>
    {% endif %}
</div>
{% endif %}
{% if can_cancel %}
<div class="session_info_cntrl_pannel" id="s_info_cancel_panel">
    <span class="confirm_msg">Are you sure you want to cancel?</span>
    <div class="confirm_btn_panel">
        <span class="corecal_btn_lg corecal_btn" id="cancel_conf_btn">Yes</span>
        <span class="corecal_btn_lg corecal_btn" id="cancel_back_btn">No</span>
    </div>
</div>
<script type="text/javascript" src="js/controllers/CancelSession.js"></script>
{% endif %} 

{% if can_edit_note %}
<script type="text/javascript" src="js/controllers/EditNote.js"></script>
{% endif %}

{% if can_edit_user  %}
<script type="text/javascript" src="js/controllers/EditUser.js"></script>
{% endif %}
